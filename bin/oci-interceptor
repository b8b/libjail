#!/bin/sh

PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin

# resolve links - $0 may be a softlink
PRG="$0"

while [ -h "$PRG" ]; do
  ls=`ls -ld "$PRG"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG="${PRG%/*}"/"$link"
  fi
done

BINDIR="${PRG%/*}"
ROOTDIR="${BINDIR%/*}"

java_cmd=/usr/local/openjdk22/bin/java

if [ -x "$ROOTDIR"/jre/bin/java ]; then
  java_cmd="$ROOTDIR"/jre/bin/java
fi

if [ -x "$java_cmd" ]; then
  export java_cmd="$java_cmd"
fi

export M2_LOCAL_REPO="$ROOTDIR"/lib

exec "$ROOTDIR"/oci-interceptor/src/main/kotlin/org/cikit/oci/main.kt "$@"
